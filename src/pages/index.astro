---
import Layout from '../layouts/Layout.astro';
import { Header } from '../components/Header';
import { Hero } from '../components/Hero';
import { Services } from '../components/Services';
import { ProblemsBanner } from '../components/ProblemsBanner';
import { Process } from '../components/Process';
import { ProcessGallery } from '../components/ProcessGallery';
import { ToolsShowcase } from '../components/ToolsShowcase';
import { Permits } from '../components/Permits';
import { TechnicalSpecs } from '../components/TechnicalSpecs';
import { FinishesShowcase } from '../components/FinishesShowcase';
import { Gallery } from '../components/Gallery';
import { Testimonials } from '../components/Testimonials';
import { FAQ } from '../components/FAQ';
import { Footer } from '../components/Footer';
---

<Layout title="Concrete Contractor Toronto | Slabs, Footings, Driveways & ICF">
  <Header client:load />
  
  <main>
    <Hero client:load />
    <Services client:visible />
    <ProblemsBanner client:visible />
    <FinishesShowcase client:visible />
    <ProcessGallery client:visible />
    <ToolsShowcase client:visible />
    <Process client:visible />
    <Gallery client:visible />
    <Testimonials client:visible />
    <Permits client:visible />
    <TechnicalSpecs client:visible />
    <FAQ client:visible />
    
    <!-- Final CTA Section -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-brand-primary to-orange-600 text-white">
      <div class="container mx-auto px-4 max-w-4xl text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready for a Clean, Durable Pour?
        </h2>
        <p class="text-lg mb-8 opacity-95">
          Get your concrete project started with Toronto's trusted contractor
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="inline-flex items-center justify-center px-8 py-3 bg-white text-brand-primary font-semibold rounded-md hover:bg-gray-100 transition-colors shadow-lg">
            Book Your Site Visit
          </button>
          <button class="inline-flex items-center justify-center px-8 py-3 bg-transparent border-2 border-white text-white font-semibold rounded-md hover:bg-white/10 transition-colors">
            Get a Fast Estimate
          </button>
        </div>
        
        <div class="mt-8 flex flex-wrap items-center justify-center gap-6 text-sm">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            WSIB-Cleared Crews
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            OBC-Compliant
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Permits & Inspections Handled
          </span>
        </div>
      </div>
    </section>
  </main>
  
  <Footer client:visible />
  
  <!-- Skip to main content link for accessibility -->
  <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-brand-primary text-white px-4 py-2 rounded">
    Skip to main content
  </a>
</Layout>

